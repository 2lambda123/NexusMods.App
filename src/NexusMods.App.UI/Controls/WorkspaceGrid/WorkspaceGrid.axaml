<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NexusMods.App.UI.Controls.WorkspaceGrid.WorkspaceGrid">
    <Design.PreviewWith>
        <Button>
            <TextBlock>Foo</TextBlock>
        </Button>
    </Design.PreviewWith>
    <Grid RowDefinitions="*, 20, *" ColumnDefinitions="*, 20, *">
        <Rectangle Grid.Row="0" Fill="DarkRed"></Rectangle>
        <GridSplitter Grid.Row="1" Cursor="SizeNorthSouth">
            
        </GridSplitter>
        <GridSplitter Grid.Column="1" Grid.RowSpan="3"></GridSplitter>
        <Rectangle Grid.Row="2" Fill="DarkBlue"></Rectangle>
    </Grid>
</UserControl>

